# App
NODE_ENV=development
PORT=3000

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=inventory_pos
DB_SYNCHRONIZE=false
DB_SSL=false

# JWT
JWT_SECRET=replace_with_strong_secret
JWT_EXPIRES_IN=8h
JWT_REFRESH_SECRET=replace_with_strong_secret
JWT_REFRESH_EXPIRES_IN=7d

# API security/runtime
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
RATE_LIMIT_TTL_SECONDS=60
RATE_LIMIT_MAX_REQUESTS=120
DASHBOARD_CACHE_TTL_SECONDS=30
ALLOW_NEGATIVE_STOCK=false
OUTBOX_WORKER_ENABLED=true
OUTBOX_BATCH_SIZE=50
OUTBOX_RETRY_BASE_MS=5000

# Bootstrap admin (first run seed)
ADMIN_EMAIL=admin@inventory.local
ADMIN_PASSWORD=ChangeMe123!
ADMIN_NAME=System Admin
ADMIN_ROLE=super_admin

# Upload/download signing
FILE_SIGNING_SECRET=change_me_file_signing_secret

# Notification transport (spool writes JSON email payloads under exports/mail)
MAIL_TRANSPORT=spool
EMAIL_FROM=no-reply@inventory.local
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=smtp-user
SMTP_PASSWORD=change_me
