# Database
DB_NAME=inventory_pos
DB_USERNAME=postgres
DB_PASSWORD=change_me

# Backend image/runtime
BACKEND_IMAGE=ghcr.io/your-org/inventory-pos-backend:latest
BACKEND_PORT=3000
NODE_ENV=production
DB_SYNCHRONIZE=false
DB_SSL=false
CORS_ORIGINS=https://pos.example.com,https://api.example.com
JWT_SECRET=replace_with_strong_secret_min_32_chars
JWT_REFRESH_SECRET=replace_with_strong_refresh_secret_min_32_chars
JWT_EXPIRES_IN=8h
JWT_REFRESH_EXPIRES_IN=7d
FILE_SIGNING_SECRET=replace_with_file_signing_secret
MAIL_TRANSPORT=spool
EMAIL_FROM=no-reply@example.com
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=smtp-user
SMTP_PASSWORD=change_me
RATE_LIMIT_TTL_SECONDS=60
RATE_LIMIT_MAX_REQUESTS=120
DASHBOARD_CACHE_TTL_SECONDS=30
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change_me_please
ADMIN_NAME=System Admin
ADMIN_ROLE=super_admin

# Frontend image/runtime
FRONTEND_IMAGE=ghcr.io/your-org/inventory-pos-frontend:latest
FRONTEND_PORT=8080
FRONTEND_API_BASE_URL=/api

# TLS (prod compose)
TLS_CERTS_PATH=./deploy/certs
HTTP_PORT=80
HTTPS_PORT=443
